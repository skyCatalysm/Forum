{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}
{% block navbar %}
{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 500px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px;}
    body{
        background-image: linear-gradient(180deg, #0e301a,#00b89c);
        min-height: 768px;
    }
    label{
        color:whitesmoke !important;
    }
</style>

<div class="example-wrapper">
    <a href="/"><h1 style="text-align: center; color:whitesmoke; font-size: 60px;">Forum</h1></a>
    <h2 style="text-align: center; color:whitesmoke; font-size: 48px;">Sign Up</h2>
    {{ form_start(regForm) }}

    <div class="field">
        {{ form_label(regForm.email) }}
        <div class="control">
            {{ form_widget(regForm.email) }}
        </div>
    </div>

    <div class="field">
        {{ form_label(regForm.password) }}
        <div class="control">
            {{ form_widget(regForm.password) }}
        </div>
    </div>

    <div class="field">
        <div class="control">
            <label class="checkbox label">
                <input type="checkbox" name="agreed">
                I agree to the <a href="#">terms and conditions</a>
            </label>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            <button class="button is-link" type="submit">Submit</button>
        </div>
        <div class="control">
            <button class="button is-text">Cancel</button>
        </div>
    </div>
    {{ form_end(regForm) }}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('sec_register') }}
{% endblock %}